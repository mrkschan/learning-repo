<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>FetchKeyword</servlet-name>
        <servlet-class>Keyword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchTheme</servlet-name>
        <servlet-class>Theme</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DefineTheme</servlet-name>
        <servlet-class>Theme</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitLearningObject</servlet-name>
        <servlet-class>LearningObject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Auth</servlet-name>
        <servlet-class>Auth</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadObject</servlet-name>
        <servlet-class>LearningObject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Evaluation</servlet-name>
        <servlet-class>Evaluation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateLearningObject</servlet-name>
        <servlet-class>LearningObject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RESTDispatcher</servlet-name>
        <servlet-class>restapi.RESTDispatcher</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>TrackCategory</servlet-name>
        <servlet-class>tracker.TrackCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrackKeyword</servlet-name>
        <servlet-class>tracker.TrackKeyword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DefineTheme</servlet-name>
        <url-pattern>/define_theme</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchTheme</servlet-name>
        <url-pattern>/fetch_theme</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchKeyword</servlet-name>
        <url-pattern>/fetch_keyword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitLearningObject</servlet-name>
        <url-pattern>/submit_object</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadObject</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Evaluation</servlet-name>
        <url-pattern>/evaluate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateLearningObject</servlet-name>
        <url-pattern>/update_object</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RESTDispatcher</servlet-name>
        <url-pattern>/restapi/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrackCategory</servlet-name>
        <url-pattern>/tracker/category/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrackKeyword</servlet-name>
        <url-pattern>/tracker/keyword/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
